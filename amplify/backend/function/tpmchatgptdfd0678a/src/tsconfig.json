{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": ".",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {},
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "allowJs": true,
    "lib": [
      "esnext"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}